config BCMDHD_43362_ANDROID
	tristate "Broadcom 43362 Android wireless cards support"
	depends on MMC
	---help---
	  This module adds Android support for wireless adapters based on
	  Broadcom 43662 chipset.

	  If you choose to build a module, it'll be called bcmdhd. Say M if
	  unsure.

config BCMDHD_FW_PATH
	string "Firmware path"
	default "/system/vendor/firmware/fw_wifi.bin"
	depends on BCMDHD_43362_ANDROID
	---help---
	  Path to the firmware file.

config BCMDHD_NVRAM_PATH
	string "NVRAM path"
	default "/system/vendor/firmware/fw_wifi_nvram.txt"
	depends on BCMDHD_43362_ANDROID
	---help---
	  Path to the calibration file.

