menu	"Samoa SoC based Machine types"
	depends on ARCH_SAMOA

choice
	prompt "Samoa SoC based board type"
	default MACH_SAMOA_RAY

config MACH_SAMOA_RAY
	bool "Support Broadcom Samoa Ray board"
	help
	  Support for the Broadcom Samoa Ray board.

config MACH_SAMOA_FPGA
        bool "Support Broadcom Samoa FPGA"
        help
          Support for the Broadcom Samoa FPGA.

endchoice

config MACH_SAMOA_RAY_TEST_ON_RHEA_RAY
	bool "Enable run Samoa on Rhea Ray before bring-up"
	depends on MACH_SAMOA_RAY
	help
	  Say Y if you want to test Samoa build on Rhea Ray. Will remove after bring-up

endmenu

